import random
# to use random function for generating computers' choice

#  1 = Rock; 2 = Paper; 3 = Scissor
game = {
    1: "Rock",
    2: "Paper",
    3: "Scissor"
} # to select the input 
gamedict = {
    "r": 1,
    "p": 2,
    "s": 3
} # to present the output

# No of rounds
rounds = int(input("Enter number of rounds: "))

# User and computer initial score
user_score = 0
computer_score = 0

for round_num in range(1, rounds+1):
    print(f"Round {round_num}")
    computer = random.choice([1, 2, 3]) # to generate random number from 1-3
    x = input("Enter r or p or s: ").lower() # user's choice
    if x not in gamedict:
        print("Invalid Entry...!!!")
    else:
        user = gamedict[x] #selecting the value from index in dict
        print(f"Your Choice: {game[user]}")
        print(f"Computer Choice: {game[computer]}")
        if (computer == user):
            print("Draw!")
        else: # Nested if else
            if (computer == 1 and user == 2) or (computer == 2 and user == 3) or (computer == 3 and user == 1):
                print("You Win!")
                user_score += 1
            else:
                print("You Lose!")
                computer_score += 1
    print(f"Score -> You: {user_score} | Computer: {computer_score}")
    print("="*30) 

# Final Result 
if (user_score == computer_score):
    print("Match is draw....")
elif (user_score > computer_score):
    print("You are the Winner!!!")
else:
    print("Computer wins the match xoxoxox")
